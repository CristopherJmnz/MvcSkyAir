@model List<Avion>
@{
    Layout = "_PanelAdmin";
}
<a class="btn btn-primary"
   asp-controller="Usuarios"
   asp-action="CreateAvion">
    Nuevo Avion
</a>
<div class="container py-3">

    <div class="row d-flex">

    
    @foreach (Avion avion in Model)
    {
        <ul class="list-group mb-3 col-md-6" style="flex:1">
            <li class="list-group-item fs-3 fw-bold text-center">
                @avion.Modelo
            </li>
            <li class="list-group-item">
                Capacidad: @avion.Capacidad asientos
            </li>
            <li class="list-group-item">
                Velocidad: @avion.Velocidad 
            </li>
        </ul>
    }
    </div>
</div>